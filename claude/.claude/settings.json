{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "Sentry",
    "Linear"
  ],
  "hooks": {
    "userPromptSubmit": "hooks/user-prompt-submit.sh",
    "postToolCall": "hooks/post-tool-call.sh"
  },
  "permissions": {
    "allow": [
      "Bash(bundle:*)",
      "Bash(cat:*)",
      "Bash(curl:*)",
      "Bash(docker-compose:*)",
      "Bash(docker:*)",
      "Bash(exit)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(go:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(lsof:*)",
      "Bash(make:*)",
      "Bash(mkdir:*)",
      "Bash(netstat:*)",
      "Bash(npm:*)",
      "Bash(ps:*)",
      "Bash(pwd:*)",
      "Bash(python:*)",
      "Bash(rails:*)",
      "Bash(rspec:*)",
      "Bash(rubocop:*)",
      "Bash(ruby:*)",
      "Bash(tail:*)",
      "Bash(terraform:*)",
      "Bash(terraform state list:*)",
      "Bash(yarn:*)",
      "Edit",
      "Glob",
      "Grep",
      "mcp__Linear__*",
      "Read",
      "WebFetch",
      "WebSearch",
      "Write",
      "mcp__Sentry__*"
    ],
    "deny": [
      "Bash(git commit:*)",
      "Bash(git push --force:*)",
      "Bash(git reset:*)",
      "Bash(sudo:*)",
      "Bash(terraform apply:*)",
    ]
  }
}
