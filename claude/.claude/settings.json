{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(curl:*)",
      "Bash(exit)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(lsof:*)",
      "Bash(mkdir:*)",
      "Bash(netstat:*)",
      "Bash(ps:*)",
      "Bash(pwd:*)",
      "Bash(tail:*)",
      "Glob",
      "Grep",
      "Read",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(sudo:*)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/docker-transform.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "finance-tools@jeangnc-marketplace": false,
    "dev-tools@jeangnc-marketplace": false,
    "note-tools@jeangnc-marketplace": false,
    "gopls-lsp@claude-plugins-official": false
  },
  "alwaysThinkingEnabled": true
}
