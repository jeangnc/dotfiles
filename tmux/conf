set -g prefix C-a
set -g visual-activity on # ?
set -g set-titles on
set -g mouse on
set -g @scroll-speed-num-lines-per-scroll 5 # faster scroll
set -sg escape-time 0 # No delay for escape key press

setw -g mode-keys vi # vi mode to copy text
setw -g automatic-rename # automatically set window title to running command
setw -g monitor-activity on # ?
setw -g xterm-keys on # allow ctrl + arrow keys

## unbind keys
unbind p
unbind C-b

## key bindings
bind C-a send-prefix # changes ctrl + b to ctrl + a

# splits
bind h split-window -v
bind v split-window -h

# vim like text copy
bind p paste-buffer
bind -t vi-copy 'v' begin-selection
bind -t vi-copy 'y' copy-selection

# adds an alias to reload tmux file
bind r source-file ~/.tmux.conf \; display-message "~/.tmux.conf reloaded"

